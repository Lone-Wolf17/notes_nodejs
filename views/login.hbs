<div class="container-fluid">
    <div class="row">
        <div class="col-12 btn-group=vertical" role="group">
            <form method="POST" action="/users/login">
                <div class="form-group">
                    <label for="username">User name:</label>
                    <input class="form-control" text="text" id="username"
                        name="username" value="" placeholder="User Name" /> 
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control" type="password" id="password"
                        name="password" value="" placeholder="Password" />
                </div>
                <button type="submit" class="btn btn-default btn-dark mt-2">Submit</button>
            </form>
        </div>
    </div>
</div>